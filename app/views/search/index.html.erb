<h1>Search Results <small> (Displaying <%= @search.results.size %> of <%= @search.total %> results) </small></h1>
<div class="row-fluid">
	<ul class="thumbnails">	
		<% @search.results.each do |result| %>
        	<li class="span4">
            	<div class="thumbnail">
	           		<img src="http://placehold.it/300x200" alt="">
		            <div class="caption">
                		<h3><%= result.name %></h3>
        		        <p><%= result.description %></p>
		                <p><a href="#" class="btn btn-primary">Buy Now</a> <a href="#" class="btn">View Product Page</a></p>
                  	</div>
                </div>
            </li>
		<% end %>
	</ul>
</div>

<%= render "pagination" %>
