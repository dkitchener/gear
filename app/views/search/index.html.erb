 <div class="row-fluid">
	<ul class="thumbnails">	
		<% @search.results.each do |result| %>
        	<li class="span3">
            	<div class="thumbnail">
	           		<img src="http://media.fmicdirect.com/fender/images/products/guitars/0117602806_frt_tbn_001.png" alt="">
		            <div class="caption">
                		<h3><%= result.name %></h3>
        		        <p><%= result.description[0,100] %></p>
		                <p><a href="#" class="btn btn-primary">Buy Now</a></p><p><a href="#" class="btn">View Product Page</a></p>
                  	</div>
                </div>
            </li>
		<% end %>
	</ul>
</div> 

<table class="table table-hover">
	<thead>
		<tr>
       		<th width="250px">Picture</th>
            <th>Product</th>
            <th width="450px">Description</th>
            <th>Price Range</th>
        </tr>
	</thead>
   	<tbody>
		<% @search.results.each_with_index do |result, index| %>
        	<tr>
            	<td><img src="http://media.fmicdirect.com/fender/images/products/guitars/0117602806_frt_tbn_001.png" alt="" class="img-polaroid"></td>
                <td><%= result.name %></td>
                <td><%= result.description %></td>
                <td>$160 - $200<br/><br/><a href="#" class="btn btn-primary btn-small">Buy Now</a><br/><br/><a href="#" class="btn btn-small">View Product Page</a></td>
            </tr>
		<% end %>
	</tbody>
</table>
<%= render "pagination" %>
